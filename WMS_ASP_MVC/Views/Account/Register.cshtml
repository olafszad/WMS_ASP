@model WMS_ASP_MVC.Models.AppUser

<br />

<h2 class="text-info">Create New User</h2>
<p>@ViewBag.message</p>
<br />

<div class="border container" style="padding:30px">
    <form method="post">
        <div class="text-danger" asp-validation-summary="ModelOnly"></div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="FristName"></label>
            </div>
            <div class="col-6">
                <input asp-for="FristName" class="form-control" />
            </div>
            <span asp-validation-for="FristName" class="text-danger"></span>
        </div>

        <div class="form-group row">
            <div class="col-3">
                <label asp-for="LastName"></label>
            </div>
            <div class="col-6">
                <input asp-for="LastName" class="form-control" />
            </div>
            <span asp-validation-for="LastName" class="text-danger"></span>
        </div>

        <div class="form-group row">
            <div class="col-3">
                <label asp-for="Email"></label>
            </div>
            <div class="col-6">
                <input asp-for="Email" class="form-control" />
            </div>
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>

        <div class="form-group row">
            <div class="col-3">
                <label asp-for="UserName"></label>
            </div>
            <div class="col-6">
                <input asp-for="UserName" class="form-control" />
            </div>
            <span asp-validation-for="UserName" class="text-danger"></span>
        </div>

        <div class="form-group row">
            <div class="col-3">
                <label asp-for="companyID"></label>
            </div>
            <div class="col-6">
                <input asp-for="companyID" class="form-control" />
            </div>
            <span asp-validation-for="companyID" class="text-danger"></span>
        </div>

        <div class="form-group row">
            <div class="col-3">
                <label>Password</label>
            </div>
            <div class="col-6">
                <input type="password" name="pwd" class="form-control" />
            </div>
        </div>

        <div class="form-group row">
            <div class="col-3 offset-3">
                <input type="submit" value="Add New User" class="btn btn-primary form-control" />
            </div>
        </div>
    </form>
</div>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}
